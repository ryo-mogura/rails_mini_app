<%# ログインページ %>
<div class="flex justify-center">
  <%= form_with url: login_path do |f| %>
    <label class="input input-bordered flex items-center my-5">
      <%= f.email_field :email, class:"grow", placeholder: t('activerecord.attributes.user.email')  %>
    </label>

    <label class="input input-bordered flex items-center my-5">
      <%= f.password_field :password, class: "grow", placeholder: t('activerecord.attributes.user.password')  %>
    </label>

    <div class="flex justify-center w-full">
      <%= f.submit t('.login'), class:"btn btn-outline btn-info my-3" %>
    </div>
  <% end %>
</div>
  <div class="flex justify-center my-3">
    <%= link_to t('.to_register_page'), new_user_path, class: "link link-primary" %>
  </div>
